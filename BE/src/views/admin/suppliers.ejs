<h1 class="text-2xl font-semibold mb-4">Quản lý Nhà cung cấp</h1>

<div class="mb-4">
  <a href="/admin/suppliers/new"
     class="px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700">
     + Thêm nhà cung cấp
  </a>
</div>

<table class="w-full border border-slate-300 bg-white">
  <thead class="bg-slate-100">
    <tr>
      <th class="p-2 border text-center">#</th>
      <th class="p-2 border text-left">Tên nhà cung cấp</th>
      <th class="p-2 border text-left">Số điện thoại</th>
      <th class="p-2 border text-left">Địa chỉ</th>
      <th class="p-2 border text-center">Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% if (suppliers.length === 0) { %>
      <tr><td colspan="5" class="text-center p-4 text-gray-500">Chưa có nhà cung cấp nào</td></tr>
    <% } else { %>
      <% suppliers.forEach((s, i) => { %>
        <tr class="hover:bg-slate-50">
          <td class="p-2 border text-center"><%= i + 1 %></td>
          <td class="p-2 border"><%= s.name %></td>
          <td class="p-2 border"><%= s.contact_phone || '-' %></td>
          <td class="p-2 border"><%= s.address || '-' %></td>
          <td class="p-2 border text-center">
            <a href="/admin/suppliers/<%= s.id %>/edit" class="text-blue-600 hover:underline">Sửa</a>
            <form action="/admin/suppliers/<%= s.id %>" method="POST" class="inline">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="text-red-600 hover:underline ml-2"
                      onclick="return confirm('Xóa nhà cung cấp này?')">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
