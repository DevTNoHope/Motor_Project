

<form action="<%= formAction %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
  <% if (method === 'PATCH') { %>
    <input type="hidden" name="_method" value="PATCH">
  <% } %>

  <!-- Tên phụ tùng -->
  <div>
    <label class="block mb-1 font-medium">Tên phụ tùng</label>
    <input type="text" name="name" value="<%= part?.name || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200"
           placeholder="Nhập tên phụ tùng">
  </div>

<!-- Dropdown loại phụ tùng -->
<div>
  <label class="block mb-1 font-medium">Loại phụ tùng</label>
  <select name="type_id" required
          class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
    <option value="">-- Chọn loại phụ tùng --</option>
    <% partTypes.forEach(type => { %>
      <option value="<%= type.id %>" <%= part?.type_id === type.id ? 'selected' : '' %>>
        <%= type.name %>
      </option>
    <% }) %>
  </select>
</div>


  <!-- SKU -->
  <div>
    <label class="block mb-1 font-medium">Mã SKU</label>
    <input type="text" name="sku" value="<%= part?.sku || '' %>"
           class="border p-2 rounded w-full" placeholder="VD: PRT001">
  </div>

  <!-- Đơn vị -->
  <div>
    <label class="block mb-1 font-medium">Đơn vị</label>
    <input type="text" name="unit" value="<%= part?.unit || '' %>"
           class="border p-2 rounded w-full" placeholder="VD: cái, bộ, hộp...">
  </div>

  <!-- Giá -->
  <div>
    <label class="block mb-1 font-medium">Giá (₫)</label>
    <input type="number" name="price" value="<%= part?.price || '' %>"
           class="border p-2 rounded w-full" placeholder="VD: 150000">
  </div>

  <!-- Trạng thái -->
  <div class="flex items-center gap-2">
    <input type="checkbox" name="is_active" value="true" <%= part?.is_active ? 'checked' : '' %> >
    <label>Kích hoạt phụ tùng</label>
  </div>

  <!-- Nút hành động -->
  <div class="flex gap-3 mt-6">
    <button type="submit"
            class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">
      Lưu
    </button>
    <a href="/admin/parts" class="px-4 py-2 rounded border hover:bg-slate-100">Hủy</a>
  </div>
</form>
