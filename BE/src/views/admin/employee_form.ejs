<h1 class="text-2xl font-semibold mb-4"><%= formTitle %></h1>

<form action="<%= formAction %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
  <% if (method === 'PATCH') { %>
    <input type="hidden" name="_method" value="PATCH">
  <% } %>

  <div>
    <label class="block mb-1 font-medium">Tên thợ</label>
    <input type="text" name="name" value="<%= employee?.Acc?.name || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Email</label>
    <input type="email" name="email" value="<%= employee?.Acc?.email || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Số điện thoại</label>
    <input type="text" name="phone" value="<%= employee?.Acc?.phone || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <!-- ✅ Thêm trường Avatar -->
  <div>
    <label class="block mb-1 font-medium">Ảnh đại diện (URL)</label>
    <input type="text" name="avatar_url" value="<%= employee?.Acc?.avatar_url || '' %>"
           class="border p-2 rounded w-full focus:ring focus:ring-emerald-200"
           placeholder="https://example.com/avatar.jpg">
    <% if (employee?.Acc?.avatar_url) { %>
      <img src="<%= employee.Acc.avatar_url %>" alt="Preview"
           class="w-20 h-20 rounded-full mt-2 border object-cover">
    <% } %>
  </div>

  <div>
    <label class="block mb-1 font-medium">Kỹ năng</label>
    <input type="text" name="skill_tags" value="<%= employee?.skill_tags || '' %>"
           class="border p-2 rounded w-full" placeholder="ví dụ: điện, máy, rửa xe">
  </div>

  <div>
    <label class="block mb-1 font-medium">Ngày vào làm</label>
    <input type="date" name="hired_at" value="<%= employee?.hired_at || '' %>"
           class="border p-2 rounded w-full">
  </div>

  <div class="flex gap-3 mt-6">
    <button type="submit"
            class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">
      Lưu
    </button>
    <a href="/admin/employees" class="px-4 py-2 rounded border hover:bg-slate-100">Hủy</a>
  </div>
</form>
