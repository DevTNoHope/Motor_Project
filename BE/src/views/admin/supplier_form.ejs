

<form action="<%= formAction %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
  <% if (method === 'PATCH') { %>
    <input type="hidden" name="_method" value="PATCH">
  <% } %>

  <div>
    <label class="block mb-1 font-medium">Tên nhà cung cấp</label>
    <input type="text" name="name" value="<%= supplier?.name || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Số điện thoại</label>
    <input type="text" name="contact_phone" value="<%= supplier?.contact_phone || '' %>"
           class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Địa chỉ</label>
    <textarea name="address" rows="2"
              class="border p-2 rounded w-full focus:ring focus:ring-emerald-200"><%= supplier?.address || '' %></textarea>
  </div>

  <div class="flex gap-3 mt-6">
    <button type="submit" class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">Lưu</button>
    <a href="/admin/suppliers" class="px-4 py-2 rounded border hover:bg-slate-100">Hủy</a>
  </div>
</form>
