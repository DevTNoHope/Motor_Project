<h1 class="text-2xl font-semibold mb-4"><%= formTitle %></h1>

<form action="<%= formAction %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
  <% if (method === 'PATCH') { %>
    <input type="hidden" name="_method" value="PATCH">
  <% } %>

  <div>
    <label class="block mb-1 font-medium">Tên dịch vụ</label>
    <input type="text" name="name" value="<%= service?.name || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Loại</label>
    <input type="text" name="type" value="<%= service?.type || '' %>"
           class="border p-2 rounded w-full">
  </div>

  <div>
  <label class="block mb-1 font-medium">Mô tả dịch vụ</label>
  <textarea name="description" rows="3"
            class="border p-2 rounded w-full focus:ring focus:ring-emerald-200"
            placeholder="Nhập mô tả ngắn về dịch vụ"><%= service?.description || '' %></textarea>
</div>

  <div>
    <label class="block mb-1 font-medium">Giá cơ bản (VND)</label>
    <input type="number" name="base_price" value="<%= service?.base_price || '' %>"
           class="border p-2 rounded w-full">
  </div>

  <div>
    <label class="block mb-1 font-medium">Thời lượng (phút)</label>
    <input type="number" name="default_duration_min" value="<%= service?.default_duration_min || '' %>"
           class="border p-2 rounded w-full">
  </div>

  <div class="flex items-center gap-2">
    <input type="checkbox" name="is_active" value="true" <%= service?.is_active ? 'checked' : '' %> >
    <label>Kích hoạt dịch vụ</label>
  </div>

  <div class="flex gap-3 mt-6">
    <button type="submit"
            class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">
      Lưu
    </button>
    <a href="/admin/services" class="px-4 py-2 rounded border hover:bg-slate-100">Hủy</a>
  </div>
</form>
