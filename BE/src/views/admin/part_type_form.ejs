<h1 class="text-2xl font-semibold mb-4"><%= formTitle %></h1>

<form action="<%= formAction %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
  <% if (method === 'PATCH') { %>
    <input type="hidden" name="_method" value="PATCH">
  <% } %>

  <div>
    <label class="block mb-1 font-medium">Tên loại phụ tùng</label>
    <input type="text" name="name" value="<%= partType?.name || '' %>"
           required class="border p-2 rounded w-full focus:ring focus:ring-emerald-200">
  </div>

  <div>
    <label class="block mb-1 font-medium">Mô tả</label>
    <textarea name="description" rows="3"
              class="border p-2 rounded w-full focus:ring focus:ring-emerald-200"
              placeholder="Nhập mô tả"><%= partType?.description || '' %></textarea>
  </div>

  <div class="flex gap-3 mt-6">
    <button type="submit"
            class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">
      Lưu
    </button>
    <a href="/admin/part-types" class="px-4 py-2 rounded border hover:bg-slate-100">Hủy</a>
  </div>
</form>
